# =============================================================================
# ELATE MOVING CHATBOT - LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# Copy this file to .env and update the values as needed for local testing

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=3001
FRONTEND_PORT=8080

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=moving_chatbot
DB_USER=postgres
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later.

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:8080,http://127.0.0.1:8080
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FILE=logs/chatbot.log
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=86400000
SESSION_CLEANUP_INTERVAL=300000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000

# =============================================================================
# CHATBOT CONFIGURATION
# =============================================================================
CHATBOT_NAME=Dave
CHATBOT_COMPANY=Elate Moving
CHATBOT_WELCOME_MESSAGE=Hi! I'm Dave from Elate Moving. How can I help you today?
CHATBOT_MAX_MESSAGE_LENGTH=1000
CHATBOT_TYPING_DELAY=1000

# =============================================================================
# LEAD GENERATION
# =============================================================================
LEAD_NOTIFICATION_EMAIL=leads@elatemoving.com
LEAD_NOTIFICATION_WEBHOOK=
ENABLE_LEAD_NOTIFICATIONS=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# SmartMoving Integration (if applicable)
SMARTMOVING_API_KEY=
SMARTMOVING_API_URL=https://api.smartmoving.com
ENABLE_SMARTMOVING_INTEGRATION=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_MODE=false
MOCK_AI_RESPONSES=false
ENABLE_TEST_ENDPOINTS=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEV_TOOLS=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@elatemoving.com
EMAIL_SECURE=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_PATH=./uploads

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
RESPONSE_TIMEOUT=10000
CONNECTION_POOL_SIZE=10

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
ALERT_EMAIL=alerts@elatemoving.com
ENABLE_HEALTH_CHECKS=true
ENABLE_ALERTS=false 