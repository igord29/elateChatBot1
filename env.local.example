# Django Settings (Local Development)
SECRET_KEY=django-insecure-local-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,https://localhost

# Database Configuration (Local Development)
DB_PASSWORD=localdev
DATABASE_URL=postgresql://elate_user:localdev@db:5432/elate_chatbot

# Redis Configuration (Local Development)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# OpenAI Configuration (Replace with your key for testing)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Local Development with MailHog)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@localhost

# Celery Configuration (Local Development)
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# Logging Configuration (Verbose for Development)
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/django.log

# Performance Monitoring (Enabled for Development)
PERFORMANCE_MONITORING=True
SLOW_QUERY_THRESHOLD=0.5
LOG_SLOW_QUERIES=True
MEMORY_MONITORING=True

# Session Management (Development Settings)
MAX_CONCURRENT_SESSIONS=10
SESSION_INACTIVITY_TIMEOUT=7200
SESSION_CLEANUP_INTERVAL=50
SESSION_COOKIE_AGE=86400

# Edge Case Handling (Development Settings)
MAX_RETRIES=3
RETRY_DELAY=1
BACKOFF_FACTOR=2
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
REQUEST_SIZE_LIMIT=20971520
RATE_LIMIT_ENABLED=False
RATE_LIMIT_ANONYMOUS=1000
RATE_LIMIT_AUTHENTICATED=5000

# Security Settings (Relaxed for Development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=False
SECURE_BROWSER_XSS_FILTER=False
SECURE_FRAME_DENY=False
SECURE_REFERRER_POLICY=no-referrer-when-downgrade

# CORS Settings (Development)
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,https://localhost
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=True

# Static Files (Development)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Cache Configuration (Development)
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/1
CACHE_OPTIONS={
    "CLIENT_CLASS": "django_redis.client.DefaultClient",
    "CONNECTION_POOL_KWARGS": {"max_connections": 20},
    "SERIALIZER": "django_redis.serializers.json.JSONSerializer",
}

# Development Tools
DJANGO_EXTENSIONS=True
DEBUG_TOOLBAR=True
DEBUG_TOOLBAR_CONFIG={
    "SHOW_TOOLBAR_CALLBACK": lambda request: True,
}

# Testing Configuration
TESTING=False
TEST_DATABASE_URL=postgresql://elate_user:localdev@db:5432/elate_chatbot_test

# Backup Configuration (Development)
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# SSL Certificate Paths (Development - Self-signed)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
